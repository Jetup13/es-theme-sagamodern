<theme>
<formatVersion>7</formatVersion>

    <view name="detailed,video">
	<text name="nameLabel" extra="true">
	    <fontPath>./../_art/Acre.otf</fontPath>
        <fontSize>0.1</fontSize>
        <alignment>left</alignment>
		<horizontalMargin>0.01</horizontalMargin>
        <origin>0 0</origin> 		
    </text>
	<textlist name="gamelist">
		<selectorColor>fffffff00</selectorColor>
        <primaryColor>ffffff99</primaryColor>
        <secondaryColor>888888</secondaryColor>
        <fontPath>./../_art/Acre.otf</fontPath>
        <fontSize>0.040</fontSize>
        <alignment>left</alignment>
        <horizontalMargin>0.01</horizontalMargin>
        <origin>1.05 0</origin>
        <lineSpacing>1.4</lineSpacing>
	</textlist>
	
    <image name="backgrounddark" extra="true">
        <tile>true</tile>
        <path>./../_art/assets/gamelist.png</path>
        <size>1 1</size>
        <pos>0 0</pos>
		<zIndex>1</zIndex>
    </image>
	
    <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.50</pos>
         <maxSize>0.55 0.55</maxSize>
         <delay>1</delay>
         <zIndex>2</zIndex>         
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
    </video>
	</view>
	
</theme>