<theme>
<formatVersion>7</formatVersion>

	
    <view name="system">
	<carousel name="systemcarousel">
          <type>horizontal</type>
          <pos>0 -0.40</pos>
          <size>1 1</size>
          <origin>0 0</origin>
          <color>00000000</color>
          <logoScale>1</logoScale>
          <logoSize>0.197 0.197</logoSize>
          <logoAlignment>center</logoAlignment>
          <maxLogoCount>5</maxLogoCount>
    </carousel>
	
	<image name="background" extra="true">
        <path>./../_art/backgrounds32/${system.theme}.jpg</path>
        <tile>false</tile>
        <size>1 1</size>
        <pos>0 0.2</pos>
        <origin>0 0</origin>
		<zIndex>0</zIndex>
    </image>
	
	<image name="backgrounddark" extra="true">
        <path>./../_art/assets/background.png</path>
        <tile>true</tile>
        <size>1 1</size>
        <pos>0 0</pos>
        <origin>0 0</origin>
		<zIndex>1</zIndex>
    </image>
	
	<text name="systemInfo">
        <fontPath>./../_art/Acre.otf</fontPath>
        <alignment>left</alignment>
        <backgroundColor>00000000</backgroundColor>
		<color>ffffff99</color>
        <forceUppercase>1</forceUppercase>
        <origin>0 0</origin>
        <pos>0.005 0.95</pos>
        <size>0.400 0.039</size>
        <fontSize>0.04</fontSize>
		<zIndex>5</zIndex>
    </text>
	
	<text name="sys_line1" extra="true">
		<fontPath>./../_art/Acre.otf</fontPath>
        <forceUppercase>1</forceUppercase>
        <fontSize>0.05</fontSize>
        <color>ffffff99</color>
        <origin>0 0</origin>
        <pos>0.008 0.73</pos>
        <size>0 0</size>
    </text>
    
    <text name="sys_line2" extra="true">
        <fontPath>./../_art/Acre.otf</fontPath>
        <forceUppercase>1</forceUppercase>
        <fontSize>0.13</fontSize>
        <color>ffffff99</color>
        <origin>0 0</origin>
        <pos>0.003 0.75</pos>
        <size>0 0</size>
    </text>
	</view>
	
	<view name="basic,detailed,video,grid">
	
	<image name="background" extra="true">
        <tile>false</tile>
        <path>./../_art/backgrounds32/${system.theme}.jpg</path>
        <size>1 1</size>
        <pos>0 0</pos>
		<zIndex>0</zIndex>
    </image>
	</view>
	
</theme>